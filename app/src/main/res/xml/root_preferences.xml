<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/set_your_id_and_choose_where_to_show_the_wallpaper">

        <PreferenceCategory app:title="Single mode">
            <EditTextPreference
                app:key="id"
                app:title="@string/id"
                app:useSimpleSummaryProvider="true" />

            <EditTextPreference
                app:defaultValue="00000000"
                app:isPreferenceVisible="false"
                app:key="api_key"
                app:title="@string/api_key"
                app:useSimpleSummaryProvider="true" />
        </PreferenceCategory>
        <SwitchPreferenceCompat
            app:key="wallpaper"
            app:title="Homescreen" />
        <SwitchPreferenceCompat
            app:key="lockscreen"
            app:title="@string/lockscreen" />
        <SwitchPreferenceCompat
            app:key="liveS"
            app:title="Live wallpaper"/>
        <SwitchPreferenceCompat
            app:key="download"
            app:title="Download" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Multi mode">
        <SwitchPreferenceCompat
            app:key="multimode"
            app:title="Enable multi mode" />
        <EditTextPreference
            app:key="IdHome"
            app:title="Homescreen Link Id"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreferenceCompat
            app:key="liveM"
            app:title="Live wallpaper" />
        <SwitchPreferenceCompat
            app:key="download1"
            app:title="Download " />
        <EditTextPreference
            app:key="IdLock"
            app:title="Lockscreen Link Id"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreferenceCompat
            app:key="download2"
            app:title="Download" />
    </PreferenceCategory>

</PreferenceScreen>